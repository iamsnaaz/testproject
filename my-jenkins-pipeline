pipeline{
    agent any
    environment{
        New_Version = "1.3.02"
         SERVER_CREDENTIALS = credentials("server-credentials")
    }
    stages{
        stage('Build'){
            steps{
                  echo "Build stage"
                  echo "Building version: ${New_Version}"
            }
        }
    stage('Test'){
            steps{
                  echo "Test stage"
            }
        }
    stage('Deploy'){
            steps{
                  echo "Deploy stage"
                  echo "deploying application with credentials: ${server-credentials}"
                  sh "${server-credentials}"
            }
        }
    }
post{
  always{
        echo "This is a jenkins file"
  }
}
}

