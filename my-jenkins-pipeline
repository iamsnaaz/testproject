pipeline{
    agent any
    environment{
        New_Version = "1.3.02"
    }
    stages{
        stage('Build'){
            steps{
                  echo "Build stage"
                  echo "Building version: ${New_Version}"
            }
        }
    stage('Test'){
            steps{
                  echo "Test stage"
            }
        }
    stage('Deploy'){
            steps{
                  withCredentials([usernamePassword(credentialsId: 'server-credentials', passwordVariable: 'pwd', usernameVariable: 'uname')]) {
                  echo "Deploy stage"
                  echo "deploying application with credentials : ${uname} ${pwd}"
                    }
                 
            }
        }
    }
post{
  always{
        echo "This is a jenkins file"
  }
}
}
